<h2>Your registered applications</h2>

<% @registered_apps.each do |app| %>

<% if app.user == current_user %>
<p>
 <div class = 'row'>

  <div class="col-md-2 col-md-offset-3"> 
    <%= link_to app.name, app %> 
  </div> 

 <div class="col-md-2 col-md-offset-3">
  <%= link_to "Delete app", app, method: :delete %>
 </div>

  </div>
</p>

<% end %>

 <% end %>

