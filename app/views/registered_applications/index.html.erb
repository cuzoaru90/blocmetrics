<br>
<h2>Your registered applications</h2>

<% @registered_applications.each do | registered_application | %>

<% if registered_application.user == current_user %>
<p>
 <div class = 'row'>

  <div class="col-md-2 col-md-offset-3"> 
    <%= link_to registered_application.name, registered_application %> 
  </div> 

  <div class="col-md-2"> 
    <%= link_to "Edit", edit_registered_application_path(registered_application) %> 
  </div>
  
  <div class="col-md-2">
    <%= link_to "Delete app", registered_application, method: :delete %>
  </div>

  </div>
</p>

<% end %>

 <% end %>

 <div class = "container center-text shift-right">

  <% if policy(RegisteredApplication.new).create? %>
  <%= button_to "Register application", new_registered_application_path, :class => "longer orange-btn centered-text", 
  :method => :get %>
  <% end %>

</div>

