<br>

<div class = "container centered-text">
<h1>Edit application</h1>
</div>

 <div class = "container centered-text">

 <div class="row">
   <div class="col-md-4 col-md-offset-2">
     <%= form_for @registered_application do |f| %>
       <div class="long form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of the application" %>
       </div>
       <div class="long form-group">
         <%= f.label :url %>
         <%= f.text_field :url, class: 'form-control', placeholder: "Provide the URL" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>

 </div>